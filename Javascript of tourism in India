JavaScript (`script.js`)
function showFestivalInfo() {
    const infoDiv = document.getElementById('festivalInfo');
    if (infoDiv.style.display === 'none') {
        infoDiv.style.display = 'block';
    } else {
        infoDiv.style.display = 'none';
    }
}
